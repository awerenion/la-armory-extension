{
  "manifest_version": 3,
  "name": "LA-armory-ext",
  "version": "0.0.2",
  "action": {
    "default_icon": {
      "16": "src/assets/GameIcon.ico"
    },
    "default_title": "LAAE",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.лостарк.рф/*"
      ],
      "js": [
        "src/content-scripts/main.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "src/background/main.js"
  },
  "host_permissions": [
    "https://lostark.ru/*",
    "https://*.лостарк.рф/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "node_modules/vite/dist/client/*",
        "src/*",
        "assets/*",
        "node_modules/.vite/deps/*",
        "plugin-vue-export-helper.js"
      ],
      "matches": [
        "https://*.лостарк.рф/*"
      ]
    }
  ]
}