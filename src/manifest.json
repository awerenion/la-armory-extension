{
  "manifest_version": 3,
  "name": "LA-armory-enhance",
  "version": "0.0.1",
  "action": {
    "default_icon": {
      "16": "/images/GameIcon.ico"
    },
    "default_title": "LAAE"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.лостарк.рф/*"
      ],
      "js": [
        "js/content-script.js"
      ]
    }
  ],
  "permissions": [
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "host_permissions": [
    "https://lostark.ru/*",
    "https://*.лостарк.рф/*"
  ]
}